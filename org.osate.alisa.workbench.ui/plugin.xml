    </extension>
    
    <extension point="org.eclipse.core.expressions.definitions">
     <definition
            id="org.osate.alisa.expressions.isSingleOutlineSelection">
         <with
               variable="selection">
            <and>
               <count
                     value="1">
               </count>
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="org.eclipse.xtext.ui.editor.outline.impl.EObjectNode">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
</extension>
    <extension point="org.eclipse.ui.menus">
     <menuContribution
            allPopups="false"
