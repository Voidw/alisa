    <extension
         point="org.eclipse.ui.commands">
     <category
            id="org.osate.alisa.category.commands"
            name="Commands related to Incremental Assurance">
     </category>
     <command categoryId="org.osate.alisa.category.commands"
            id="org.osate.alisa.commands.TestMe"
            description="Perform Test"
