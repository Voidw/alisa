<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>


    
    
    
    <extension
         point="org.eclipse.ui.commands">
     <category
            id="org.osate.assure.category.commands"
            name="Commands related to Assure">
     </category>

     <command categoryId="org.osate.assure.category.commands"
            id="org.osate.assure.commands.GenerateMetrics"
            description="Generate Requirements Metrics"
            name="Generate Metrics">
     </command>     

    </extension>
    
    
    
    <extension point="org.eclipse.ui.menus">
         
         
        <menuContribution locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
			<command commandId="org.osate.assure.commands.GenerateMetrics" 
				style="push" tooltip="Generate Metrics">
         		<visibleWhen checkEnabled="false">
	            	<and>
	            		<reference definitionId="org.osate.assure.Assure.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
				</visibleWhen>
			</command>
         </menuContribution>
 
 
	</extension>
	
	
	

    
     	<extension point="org.eclipse.ui.handlers">

                  <handler
            class="org.osate.assure.metrics.handlers.AssureMetricsHandler" 
            commandId="org.osate.assure.commands.GenerateMetrics">
   
      </handler>

     </extension>  

     


</plugin>
